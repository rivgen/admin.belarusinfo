{% block body %}

    {% for rubric0 in rubricCompanies if rubric0.parentId == 0 and rubric0.published == 1 %}
        <div class="modal fade bd-example-modal-lg{{ rubric0.id }}" tabindex="-1" role="dialog"
             aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">
                            {{ rubric0.name }}
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {% for rubric1 in rubricCompanies if rubric1.parentId == rubric0.id and rubric1.published == 1 %}
                            {{ rubric1.name }}:</br>
                            {% for rubric2 in rubricCompanies if rubric2.parentId == rubric1.id and rubric2.published == 1 %}
                                <div style="color: blue"><a
                                            href="{{ path('rubric_companies', {'alias': rubric2.alias}) }}"> {{ rubric2.name }}</a> </br>
                                </div>
                            {% endfor %}
                            </br>
                        {% endfor %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close
                        </button>
                        {#<button type="button" class="btn btn-primary">Save changes</button>#}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="katalogBg">
        <div class="container maxRazmer katalogCompany">
            {#<div class="row">#}
            {#<div class="col-md-9">#}
            {#<h2 style="margin-left: 0px; margin-right: 0px; padding-top: 5px; ">#}
            {#Каталог организаций</h2>#}
            {#</div>#}
            {#<div class="col-md-3" style="clear: both; font-size: 16px; color: #666; font-weight: bold; text-align: center;">#}
            {#<h7>Организаций в каталоге</h7> ({{ countRegions }})#}
            {#</div>#}
            {#</div>#}
            <div class="row" style=" ">
                <div class="col-md-4">
                    {% for rubric0 in rubricCompanies|slice(0, 9) if rubric0.parentId == 0 and rubric0.published == 1 %}
                        <div>
                            <a itemprop="url" class="btn" data-toggle="modal"
                               data-target=".bd-example-modal-lg{{ rubric0.id }}"
                               title="{{ rubric0.name }}">{{ rubric0.name }}</a>

                        </div>
                    {% endfor %}
                </div>
                <div class="col-md-4">
                    {% for rubric0 in rubricCompanies|slice(9, 9) if rubric0.parentId == 0 and rubric0.published == 1 %}
                        <div>
                            <a itemprop="url" class="btn" data-toggle="modal"
                               data-target=".bd-example-modal-lg{{ rubric0.id }}"
                               title="{{ rubric0.name }}">{{ rubric0.name }}</a>

                        </div>
                    {% endfor %}
                </div>
                <div class="col-md-4">
                    {% for rubric0 in rubricCompanies|slice(18, 9) if rubric0.parentId == 0 and rubric0.published == 1 %}
                        <div>
                            <a itemprop="url" class="btn" data-toggle="modal"
                               data-target=".bd-example-modal-lg{{ rubric0.id }}"
                               title="{{ rubric0.name }}">{{ rubric0.name }}</a>

                        </div>
                    {% endfor %}
                    <div class="rubricCol">
                        <h7>Организаций в каталоге</h7>
                        ({{ countRegions }})
                    </div>
                    <div class="rubricAll">
                        <a href="{{ path('all_rubric_companies') }}" role="button"
                           aria-pressed="true">Все организации</a>
                    </div>
                </div>

                {#<div class="col-md-3">#}
